@model EmployeeNavigatorV3.Models.Person
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="pt-2 pb-3">
        <h3>Agregar Nuevo Empleado</h3>
    </div>
    <form asp-action="Create" method="post">
        <div class="row mb-2">
            <label for="inputCode" class="col-sm-4 col-form-label col-form-label-sm">Codigo:</label>
            <div class="col-sm-8">
                <input asp-for="Code" class="form-control form-control-sm" id="inputCode" placeholder="Ingrese el codigo del empleado"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label for="inputDni" class="col-sm-4 col-form-label col-form-label-sm">DNI:</label>
            <div class="col-sm-8">
                <input asp-for="Dni" class="form-control form-control-sm" id="inputDni" placeholder="Ingrese el DNI del empleado"/>
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label for="inputName" class="col-sm-1 col-form-label col-form-label-sm">Nombre:</label>
            <div class="col-sm-3">
                <input asp-for="Name" class="form-control form-control-sm" id="inputName" placeholder="Ingrese el nombre del empleado"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label for="inputLastName" class="col-sm-1 col-form-label col-form-label-sm">Apellidos:</label>
            <div class="col-sm-3">
                <input asp-for="LastName" class="form-control form-control-sm" id="inputLastName" placeholder="Ingrese el apellido del empleado" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <label for="inputEmail" class="col-sm-1 col-form-label col-form-label-sm">Correo:</label>
            <div class="col-sm-3">
                <input asp-for="Email" type="email" class="form-control form-control-sm" id="inputEmail" placeholder="Ingrese el correo del empleado"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label for="inputDateOfBirth" class="col-sm-2 col-form-label col-form-label-sm">Fecha de Nacimiento:</label>
            <div class="col-sm-4">
                <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm" id="inputDateOfBirth"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <label for="inputAge" class="col-sm-2 col-form-label col-form-label-sm">Edad:</label>
            <div class="col-sm-4">
                <input asp-for="Age" class="form-control form-control-sm" id="inputAge" placeholder="Ingrese la edad del empleado"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label for="inputArea" class="col-sm-1 col-form-label col-form-label-sm">Area:</label>
            <div class="col-sm-2">
                <select asp-for="Area" class="form-select form-select-sm" id="inputIdArea" asp-items="ViewBag.Areas">
                    <option value="">--Seleccione--</option>
                </select>
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <label for="inputProfession" class="col-sm-1 col-form-label-sm">Profesion:</label>
            <div class="col-sm-2">
                <select asp-for="Profession" class="form-select form-select-sm" id="inputProfession" asp-items="ViewBag.Professions">
                    <option value="">--Seleccione--</option>
                </select>
                <span asp-validation-for="Profession" class="text-danger"></span> 
            </div>
            <label for="inputUni" class="col-sm-1 col-form-label col-form-label-sm">Universidad:</label>
            <div class="col-sm-2">
                <select asp-for="Uni" class="form-select form-select-sm" id="inputUni" asp-items="ViewBag.Universities">
                    <option value="">--Seleccione--</option>
                </select>
                <span asp-validation-for="Uni" class="text-danger"></span>
            </div>
            <label for="inputPosition" class="col-sm-1 col-form-label col-form-label-sm">Cargo:</label>
            <div class="col-sm-2">
                <select asp-for="Position" class="form-select form-select-sm" id="inputPosition" asp-items="ViewBag.Positions">
                    <option value="">--Seleccione--</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="d-grid pt-5">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" /></partial>
}

