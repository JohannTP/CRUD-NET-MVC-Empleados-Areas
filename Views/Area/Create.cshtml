@model EmployeeNavigatorV3.Models.Area
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" asp-action="Index">
                <i class="bi bi-arrow-return-left"></i>
            </a>
        </div>

    </div>
    <div class="col-12 pt-2 pb-3">
        <h2>Crear Nueva Area</h2>
    </div>
    <div class="col-12 my-2">
        <form asp-action="Create" method="post">
            <div class="my-1 row">
                <label for="inputName" class="col-sm-4 col-form-label col-form-label-sm">Nombre de Area</label>
                <div class="col-sm-8">
                    <input asp-for="Name" id="inputName" class="form-control form-control-sm" placeholder="Ingresa el nombre de area"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-1">
                <label for="inputDescription" class="col-sm-4 col-form-label col-form-label-sm">Descripción</label>
                <div class="col-sm-8">
                    <input asp-for="Description" id="inputDescription" class="form-control form-control-sm" placeholder="Ingresa una descripción"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="d-grid pt-5">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}