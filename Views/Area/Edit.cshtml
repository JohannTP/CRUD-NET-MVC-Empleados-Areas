@model EmployeeNavigatorV3.Models.Area
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" asp-action="Index">
                <i class="bi bi-arrow-return-left"></i>
            </a>
        </div>
    </div>
    <div class="col-12 pt-3 pb-2">
        <h2>Actualizar Area</h2>
    </div>
    <div class="col-12 my-1">
        <form asp-action="Edit" method="post">
            <div class="row my-1">
                <label for="inputName" class="col-sm-4 col-form-label col-for-label-sm">Nombre de Area</label>
                <div class="col-sm-8">
                    <input asp-for="Name" id="inputName" class="form-control form-control-sm" placeholder="Ingrese el nombre de are" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-1">
                <label for="inputDescription" class="col-sm-4 col-form-label col-form-label-sm">Descripción de Area</label>
                <div class="col-sm-8">
                    <input asp-for="Description" id="inputDescription" class="form-control form-control-sm" placeholder="Ingresa una descripción"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="d-grid gap-2 my-3">
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
        </form>
    </div>
</div>

